[
  {
    "defaults": {
      "link": {
        "relink": true
      }
    }
  },
  {
    "clean": ["~"]
  },
  {
    "link": {
      "~/.config/nvim/init.vim": {
        "create": true,
        "path": "vim/nvimrc",
        "relink": true
      },
      "~/.config/nvim/UltiSnips": {
        "create": true,
        "path": "vim/UltiSnips",
        "relink": true
      },
      "~/.vim/bundle/Vundle.vim": {
        "create": true,
        "path": "vim/Vundle.vim",
        "relink": true
      },
      "~/.vimrc": {
        "path": "vim/nvimrc",
        "relink": true
      },
      "~/.tmux/plugins/tpm": {
        "create": true,
        "path": "tmux/tpm",
        "relink": true
      },
      "~/.tmux.conf": {
        "path": "tmux.conf",
        "relink": true
      },
      "~/.tern.config": {
        "path": "tern.config",
        "relink": true
      },
      "~/.zshrc": {
        "path": ".zshrc",
        "relink": true
      },
      "~/.p10k.zsh": {
        "path": ".p10k.zsh",
        "relink": true
      },
      "~/.gitconfig": {
        "create": true,
        "path": ".gitconfig",
        "relink": true
      },
      "~/.obsidian": {
        "create": true,
        "path": "obsidian/.obsidian",
        "relink": true
      },
      "~/.obsidian.vimrc": {
        "create": true,
        "path": "obsidian/.obsidian.vimrc",
        "relink": true
      },
      "~/.config/karabiner/assets/complex_modifications": {
        "create": true,
        "path": "complex_modifications",
        "relink": true
      }
    }
  },
  {
    "shell": [
      ["git submodule update --init --recursive", "Installing submodules"]
    ]
  }
]
